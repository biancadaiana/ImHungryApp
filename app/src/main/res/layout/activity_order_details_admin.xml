<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrderDetailsAdminActivity"
    android:orientation="vertical">


<!--    Toolbar-->
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/shape_rect01"
      android:padding="10dp">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:textColor="@color/white"
          android:text="Order Details"
          android:textSize="20sp"
          android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/editBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_edit_white"
        android:layout_alignParentEnd="true"/>



  </RelativeLayout>

  <!--  Order Information-->
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="3dp"
      app:contentPadding="5dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="OrderID"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/dark_brown"
            android:text="123456" />

      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="Date"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/dark_brown"
            android:text="dd/mm/yyyy" />

      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="Order Status"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/orderStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/teal_700"
            android:text="In Progress" />

      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="Client Email"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/dark_brown"
            android:text="Email" />

      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="Client Phone"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/dark_brown"
            android:text="0744444444"
            android:autoLink="all"/>

      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="Menu"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/totalMenuTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/dark_brown"
            android:text="10" />

      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="Amount"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/dark_brown"
            android:text="RON55" />

      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_brown"
            android:text="DeliveryAddress"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/dark_brown"
            android:text="Address" />

      </TableRow>

    </TableLayout>

  </androidx.cardview.widget.CardView>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/dark_brown"
      android:text="Ordered Menu"
      android:textColor="@color/white"
      android:textAlignment="center"
      android:padding="2dp"/>
  
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/menuRv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/row_menu_ordered"/>




</LinearLayout>